@model fragrance.Models.AdminLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageLogin.cshtml";
}

<h2 class="text-uppercase text-center text-light">fragrance</h2>

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group p-2">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control p-2 border-0", @PlaceHolder = "Email" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group p-2">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control p-2 border-0", @PlaceHolder = "Password" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>
    <div class="form-group text-center p-4">
        <button type="submit" class="btn btn-outline-light btn-lg px-5">LOGIN</button>
    </div>
}