@model IEnumerable<fragrance.Models.user_order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- Page Heading -->

<h1 class="h3 mb-2 text-gray-800">Order management</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <p class="m-0 font-weight-bold text-primary float-left">Order List</p>
        <a class="btn btn-primary float-right" href="@Url.Action("Create", "user_order")">Create New</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.acc_user.name_user)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.receiver_oder)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.status_order)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.address_order)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.date_order)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.phone_order)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.action_order)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.created_at)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.acc_user.name_user)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.receiver_oder)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.status_order)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.address_order)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.date_order)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.phone_order)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.action_order)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.created_at)
                        </th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.acc_user.name_user)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.receiver_oder)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.status_order)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.address_order)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.date_order)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.phone_order)
                            </td>
                            <td>
                                @(((fragrance.DTO.OrderAction)item.action_order).ToString()) @item.action_order
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.created_at)
                            </td>
                            <td>

                                <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Edit", new { id = item.id_order })">Edit</a>
                                <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Delete", new { id = item.id_order })">Delete</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
