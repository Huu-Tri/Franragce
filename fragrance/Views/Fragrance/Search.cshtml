@model IEnumerable<fragrance.Models.product>

@{
    ViewBag.Title = "Homepage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-section single-artcile-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <h1><span class="text-white">Search results for</span><br /><span class="text-warning">@ViewBag.Search</span></h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        @foreach (var pro in Model)
        {
            <div class="col-lg-4 col-md-6 text-center">
                <div class="single-product-item">
                    <div class="product-image">
                        <a href="@Url.Action("Product","Fragrance", new { id = pro.id_pr})"><img src="~/Assets/Images/Products/@pro.image_pr" alt=""></a>
                    </div>
                    <h3>@pro.name_pr</h3>
                    <p class="product-price"><span>@pro.volume_pr ml</span> @Html.FormatValue(pro.price_pr, "{0:#,##0}")$ </p>
                    <a id="addtocart" href="@Url.Action("AddCart", "Carts", new { ms = pro.id_pr, url = Request.Url.ToString() })" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
                </div>
            </div>
        }
    </div>

</div>
