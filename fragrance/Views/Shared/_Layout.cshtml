<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fragrance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/Content/Site.css"/>
    <link rel="icon" href="~/Assets/Images/Homepage/pngtree.png"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>
    <div id="ontop"></div>
    <a href="#ontop" class="ontop"><i class="bi bi-arrow-up-circle-fill"></i></a>
    <nav class="navbar navbar-expand-md navbar-light bg-light sticky-top">
        <div class="container-fluid ">
            <a class="navbar-brand" href="javascript:void(0)"><img src="~/Assets/Images/Homepage/pngtree.png" width="40" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="navbar-nav me-auto  text-uppercase">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Fragrance")">Home</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            MEN'S FRAGRANCE
                        </a>
                        <ul class="dropdown-menu">
                            @Html.Action("TypeProductMale", "Fragrance")
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            WOMEN'S FRAGRANCE
                        </a>
                        <ul class="dropdown-menu">
                            @Html.Action("TypeProductFamale", "Fragrance")
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="javascript:void(0)">COMMITMENTS</a>
                    </li>
                </ul>
                <div>
                    <ul class="navbar-nav user-cart">
                        @*cart here*@
                        @Html.Action("CartPartial", "Carts")
                        @if (Session["acc_user"] != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"><i class="bi bi-person-fill"></i>@(Session["User_Name"]?.ToString())</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Link</a></li>
                                    <li><a class="dropdown-item" href="#">Another link</a></li>
                                    <li><hr /></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Logout", "User")">Sign out</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login","User")"><i class="bi bi-person-fill"></i></a>
                            </li>
                        }
                    </ul>
                </div>

                @using (Html.BeginForm("Search", "Fragrance", FormMethod.Get))
                {
                    <div class="d-flex">
                        <input class="form-control me-2" name="strSearch" value="@ViewBag.Search" type="text" placeholder="Search" required>
                        <button class="btn btn-outline-dark" type="submit">Search</button>
                    </div>
                    
                    <span class="text-danger">@ViewBag.SearchErr</span>

                }



            </div>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer class="bg-dark mt-lg-5">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3916.7725940029286!2d106.67328555058639!3d10.980529958356799!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3174d1085e2b1c37%3A0x73bfa5616464d0ee!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBUaOG7pyBE4bqndSBN4buZdA!5e0!3m2!1svi!2s!4v1679061309726!5m2!1svi!2s" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
