@model fragrance.Models.acc_user
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumb-section news-bg-6 " style="height: 100vh">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row justify-content-center ">
            <div class="col col-sm-12 col-md-5 col-lg-5 shadow p-5 bg-light">
                <h2 class="text-uppercase text-center ">fragrance register</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.name_user)
                    <div class="">
                        @Html.EditorFor(model => model.name_user, new { htmlAttributes = new { @class = "form-control register_input" } })
                        @Html.ValidationMessageFor(model => model.name_user, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.email_user)
                    <div class="">
                        @Html.EditorFor(model => model.email_user, new { htmlAttributes = new { @class = "form-control register_input" } })
                        @Html.ValidationMessageFor(model => model.email_user, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.phone_user)
                    <div class="">
                        @Html.EditorFor(model => model.phone_user, new { htmlAttributes = new { @class = "form-control register_input" } })
                        @Html.ValidationMessageFor(model => model.phone_user, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.password_user)
                    <div class="">
                        @Html.EditorFor(model => model.password_user, new { htmlAttributes = new { @class = "form-control register_input" } })
                        @Html.ValidationMessageFor(model => model.password_user, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 ">
                        <input type="submit" value="REGISTER" class="btn btn-dark p-2 px-3" />
                    </div>
                </div>
            </div>
        </div>
    }


</div>