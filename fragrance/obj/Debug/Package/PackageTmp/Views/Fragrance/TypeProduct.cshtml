@model IEnumerable<fragrance.Models.product>
@{
    foreach (var td in Model)
    {
        ViewBag.Title = @td.product_type.name_prt;
        break;
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @foreach (var td in Model)
    {
        <div class="d-flex align-items-center justify-content-center text-center" style="
            height:500px ;
            background-image: url('/Assets/Images/Product_type/@td.product_type.image_prt');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        ">
            <div class="typepro_caption  shadow-lg">
                <h2 class="text-uppercase">@td.product_type.name_prt</h2>
                <h5>@td.product_type.desc_prt</h5>
            </div>

        </div>

        break;
    }
</div>
<div class="list_product row mt-5">
    @foreach (var pro in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 ">
            <div class="product_item bg-light">
                <a href="@Url.Action("Product","Fragrance", new { id = pro.id_pr})">
                    <img class="product_item-img" src="~/Assets/Images/Products/@pro.image_pr" alt="Thumbnail Image 1">
                    <div class="p-3">
                        <h5 class="text-capitalize">@pro.name_pr</h5>
                        <div class="d-flex justify-content-between">
                            <p>@pro.volume_pr ml</p>
                            <p>@Html.FormatValue(pro.price_pr, "{0:#,##0}")@*@pro.price_pr*@ $</p>
                        </div>
                    </div>
                </a>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-outline-dark"
                       href="@Url.Action("AddCart","Carts", new { ms = pro.id_pr, url = Request.Url.ToString() })"
                       role="button">
                        Add to cart
                    </a>
                </div>

            </div>

        </div>
    }
</div>


