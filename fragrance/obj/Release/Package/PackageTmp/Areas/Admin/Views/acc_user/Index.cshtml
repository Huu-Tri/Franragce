@model IEnumerable<fragrance.Models.acc_user>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->

<h1 class="h3 mb-2 text-gray-800">User management</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <p class="m-0 font-weight-bold text-primary float-left">User List</p>
        <a class="btn btn-primary float-right" href="@Url.Action("Create", "acc_user")">Create New</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.name_user)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.email_user)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.phone_user)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.password_user)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.created_at)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.name_user)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.email_user)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.phone_user)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.password_user)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.created_at)
                        </th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.name_user)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email_user)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.phone_user)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.password_user)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.created_at)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id_user }) |
                                @Html.ActionLink("Details", "Details", new { id = item.id_user }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.id_user })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>