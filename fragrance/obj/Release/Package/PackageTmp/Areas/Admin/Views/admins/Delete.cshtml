@model fragrance.Models.admin

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Details @Html.DisplayFor(model => model.name_ad)</h2>


<div>
    <p class="text-danger">@ViewBag.Errorad</p>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.name_ad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name_ad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.email_ad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email_ad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.password_ad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password_ad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.created_at)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.created_at)
        </dd>

    </dl>
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myDeleteModal">
        Delete
    </button>
    
</div>

<!-- The Modal -->
<div class="modal" id="myDeleteModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">DELETE</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                Are you sure you want to delete this?
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>


                }
                <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

