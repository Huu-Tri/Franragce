@model IEnumerable<fragrance.Models.product_type>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->

<h1 class="h3 mb-2 text-gray-800">Type product management</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <p class="m-0 font-weight-bold text-primary float-left">Type product List</p>
        <a class="btn btn-primary float-right" href="@Url.Action("Create", "product_type")">Create New</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.name_prt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.image_prt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.desc_prt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.forgender_prt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.created_at)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.name_prt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.image_prt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.desc_prt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.forgender_prt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.created_at)
                        </th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.name_prt)
                            </td>
                            <td>
                                <img src="~/Assets/Images/Product_type/@Html.DisplayFor(modelItem => item.image_prt)" width="200"/>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.desc_prt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.forgender_prt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.created_at)
                            </td>

                            <td>

                                <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Edit", new { id = item.id_prt })">Edit</a>
                                <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Delete", new { id = item.id_prt })">Delete</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>