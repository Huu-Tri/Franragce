                @Html.ValidationMessageFor(model => model.tips_pr, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.status_pr, htmlAttributes: new { @class = "control-label col-md-2" })
