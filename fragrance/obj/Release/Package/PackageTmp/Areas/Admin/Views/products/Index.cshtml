@model IEnumerable<fragrance.Models.product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- Page Heading -->

<h1 class="h3 mb-2 text-gray-800">Product management</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <p class="m-0 font-weight-bold text-primary float-left">Product List</p>
        <a class="btn btn-primary float-right" href="@Url.Action("Create", "products")">Create New</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.collection_child.name_c_child)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.product_type.name_prt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.name_pr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.image_pr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.volume_pr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.price_pr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.amount_pr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.status_pr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.created_at)
                        </th>
                        <th>Action</th>
                    </tr>

                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.collection_child.name_c_child)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.product_type.name_prt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.name_pr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.image_pr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.volume_pr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.price_pr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.amount_pr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.status_pr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.created_at)
                        </th>
                        <th>Action</th>
                    </tr>

                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.collection_child.name_c_child)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.product_type.name_prt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name_pr)
                            </td>
                            <td>
                                
                                <img src="~/Assets/Images/Products/@item.image_pr" style="width:100px;" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.volume_pr)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.price_pr)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.amount_pr)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.status_pr)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.created_at)
                            </td>
                            <td>
                                <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Edit", new { id = item.id_pr })">Edit</a>
                                <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Delete", new { id = item.id_pr })">Delete</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
